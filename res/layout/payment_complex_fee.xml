<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payment_color_common_home_bg"
    android:orientation="vertical" >

    <include layout="@layout/payment_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <include
            android:id="@+id/select_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_select_type" />

        <include
            android:id="@+id/property_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_text_value" />

        <include
            android:id="@+id/yingjiao_jine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_text_value_desc" />

        <include
            android:id="@+id/dazhe_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_select_type" />

        <include
            android:id="@+id/yucun_jine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_text_value" />

        <include
            android:id="@+id/heji_jine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_text_value" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_next_step" />
    </LinearLayout>

</LinearLayout>