<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payment_color_common_home_bg"
    android:orientation="vertical" >

    <include layout="@layout/payment_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <include
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_text_value" />

        <include
            android:id="@+id/housecode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_text_value" />

        <include
            android:id="@+id/needchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/payment_common_select_type_height"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_text_value" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/desc_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:id="@+id/qianfei"
                    style="@style/Payment_Heat_Title" />

                <TextView
                    android:id="@+id/danjia"
                    style="@style/Payment_Heat_Title" />

                <TextView
                    android:id="@+id/zhinajin"
                    style="@style/Payment_Heat_Title" />

                <TextView
                    android:id="@+id/yingjiao"
                    style="@style/Payment_Heat_Title" />
            </LinearLayout>

            <include
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/payment_commont_list_content" />
        </LinearLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            layout="@layout/payment_common_next_step" />
    </LinearLayout>

</LinearLayout>