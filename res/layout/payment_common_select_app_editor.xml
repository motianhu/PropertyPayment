<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payment_commont_color_select_type_bg" >

    <EditText
        android:id="@+id/select_type_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="68dp"
        android:textColor="@color/payment_color_common_title" />

    <Button
        android:id="@+id/goto_app"
        android:layout_width="@dimen/payment_common_select_type_height"
        android:layout_height="@dimen/payment_common_select_type_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/payment_common_select_type_margin_right"
        android:background="@drawable/payment_contants"
        android:gravity="center" />

</RelativeLayout>